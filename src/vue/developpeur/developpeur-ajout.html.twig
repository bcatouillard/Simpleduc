{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} - Ajouter un développeur {% endblock %}
       
{% block contenu %} 

{% if form.valide is defined %} 
    {% if form.valide == true %}
       <h1 class="alert alert-success" role="alert">Ajout réussie</h1>
       <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=developpeur" class="violet">Retourner sur la liste des développeurs</a></h1>
    {% else %} 
       <h1 class="h3 mb-3 font-weight-normal">{{ form.valide.message }}</h1> 
       <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=developpeur" class="violet">Retourner sur la liste des développeurs</a></h1>
    {% endif %}     
{% else %}   
 <form class="form-signin" action="index.php?page=developpeurAdd" method="post" enctype="application/x-www-form-urlencoded">
      <h1 class="h3 mb-3 font-weight-normal">Ajouter un développeur</h1>
      <label for="inputEmail" class="sr-only">Email:</label>
      <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>
      <label for="inputPassword" class="sr-only">Mot de passe:</label>
      <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>
      <label for="inputPassword2" class="sr-only">Mot de passe:</label>
      <input type="password" id="inputPassword2" name="inputPassword2" class="form-control" placeholder="Confirmation mot de passe" required>
      {# Nom et prénom #}
      <label for="nom" class="sr-only">Nom:</label>
      <input type="text" id="nom" name="nom" class="form-control" placeholder="Nom" required>
      <label for="prenom" class="sr-only">Prénom:</label>
      <input type="prenom" id="prenom" name="prenom" class="form-control" placeholder="Prénom" required>
      <label for="telephone" class="sr-only">Téléphone:</label>
      <input type="telephone" id="telephone" name="telephone" class="form-control" placeholder="Téléphone" required>
      <label for="adresse" class="sr-only">Adresse:</label>
      <input type="adresse" id="telephone" name="adresse" class="form-control" placeholder="Adresse" required>
      <input type="file" name="photo" id="photo" class="form-control">
      <ul class='form-control'>
          {% for o in form.outil %}
              <li class='list-unstyled col-10'>{{o.libelle}} Version : {{o.version}}<input type='checkbox' name='outil[]' value='{{o.code}}'></li>
          {% endfor %}
      </ul>
      <button class="btn btn-lg  btn-block" type="submit" name="btAjouter">Ajouter</button>
     
 </form>
   
{% endif %}  
{% endblock %} 
