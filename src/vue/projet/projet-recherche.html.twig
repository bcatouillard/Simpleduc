{% extends "base.html.twig" %}
       
{% block title %} {{ parent() }} - Recherche d'un projet {% endblock %}
       
{% block contenu %} 
    
    {% if form.projet is defined %}
        {% if form.projet != null %}
            <h1>Projet : {{form.projet.libelleProj}}</h1>
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <tr>
                        <th>Client</th>
                        <th>Date Signature</th>
                        <th>Somme des coûts</th>
                    </tr>
                        <tr>
                            <td>{{form.projet.nomEntreprise}}</td>
                            <td>{{form.projet.dateSignature}}</td>
                            {% if form.projet.coutGlobal != 0 %}
                                <td>{{form.projet.coutGlobal}}€</td>
                            {% else %}
                               <td>0€</td> 
                            {% endif %}
                        </tr> 
                </table>
                <a href='index.php?page=recherchepdf&code={{form.projet.libelleProj}}' target='_blank'>Télécharger au format pdf <span class='glyphicon glyphicon-download'></span></a>
                <hr/>
                <h4 align='center' class='alert alert-info'><a href='index.php?page=projet'>Retourner à la liste des projets</a></h4>
            </div>
        {% else %}
            <h1 class="alert alert-danger">{{ form.message }} </h1>
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=projet" class="violet">Retourner sur la liste des projets</a></h1>
        {% endif %}
    {% else %}
        <h1 class="alert alert-danger">{{ form.message }} </h1>
        <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=projet" class="violet">Retourner sur la liste des projets</a></h1>
    {% endif %}
{% endblock %}    